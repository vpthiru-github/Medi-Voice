            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{apiURL}}/auth/logout",
              "host": ["{{apiURL}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
